@model ST10281011_PROG7311_POE_PART_2.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

@* Improvements for data anotations and validation assisted by ChatGPT (OpenAI, 2025). See README File for Details. *@
@* OpenAI ChatGpt. 2025. *@
